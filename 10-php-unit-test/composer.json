{
  "name": "rifki/belajar-php-unit-test",
  "description": "Belajar PHP Unit Test",
  "type": "project",
  "autoload": {
    "psr-4": {
      "MyClass\\Test\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MyClass\\Test\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "rifkimuhazzar",
      "email": "rifkiki78@gmail.com"
    }
  ],
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:product": "phpunit --configuration phpunit.xml --testsuite product",
    "test:counter": "phpunit --configuration phpunit.xml --testsuite counter"
  },
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.27"
  }
}
